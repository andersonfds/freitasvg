{
    "$schema": "https://json.schemastore.org/nodemon",
    "restartable": "rs",
    "ignore": [".git", "node_modules/**/node_modules", "**.test.ts"],
    "verbose": false,
    "execMap": {
        "ts": "ts-node --compiler ttypescript"
    },
    "watch": ["src/", "main.ts"],
    "events": {
        "restart": "clear",
        "start": "clear"
    },
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "js,json,ts"
}